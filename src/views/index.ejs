<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <header>
        <h1>Inventory App</h1>
    </header>

    <%- include("partials/categorySidebar.ejs", { categories: ["Drinks", "Candy", "Chips"] }) %>

    <%- include("partials/itemsSummary", { summary: summary }) %>

    <a href="/new" class="linkBtn"><button>Add New Item</button></a>

    <table>
        <caption><%= title %></caption>
        <tr>
            <th>Name</th>
            <th>Size</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
        <% items.forEach((item) => { %>
            <tr>
                <td><%= item.name %></td>
                <td><%= item.size %></td>
                <td>$<%= item.price %></td>
                <td><%= item.quantity %></td>
                <td>$<%= Math.round(item.stock) %></td>
                <td><%= item.category %></td>
                <td>
                    <a href="/update/<%= item.id %>" class="linkBtn"><button>Update</button></a>
                    <a href="/delete/<%= item.id %>" class="linkBtn"><button>Delete</button></a>
                </td>
            </tr>
        <% }); %>
    </table>
    
</body>
</html>